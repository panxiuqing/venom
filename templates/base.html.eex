<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= @page.title %> - <%= @site.name %></title>
    <script async defer data-domain="venom.tialki.com" src="https://analytics.tialki.com/js/plausible.js"></script>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Bitter&display=swap" rel="stylesheet">
    <link href="/assets/css/style.css" rel="stylesheet"><link rel="stylesheet"
      href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.0.1/styles/default.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.0.1/highlight.min.js"></script>
    <style>
      .font-bitter {
        font-family: 'Bitter', serif;
      }
    </style>
  </head>
  <body class="font-bitter">
    <h1 class="text-center"><a href="<%= base() %>"><%= @site.name %></a></h1>
    <p class="text-center"><%= @site.description %></p>
    <%= include "nav" %>
    <main>
      <%= @contents %>
    </main>
    <script>hljs.highlightAll();</script>
  </body>
</html>
